<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".HomeActivity"
    android:id="@+id/drawerlayout"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <include layout="@layout/includesidebarheader"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_margin="5dp">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="160dp"
                        android:layout_height="140dp"
                        android:layout_margin="10dp"
                        android:id="@+id/addNotice"
                        app:cardElevation="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="My Credit Points"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:padding="5dp"
                                android:gravity="center_horizontal" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center">
                                    <ImageView
                                        android:layout_width="64dp"
                                        android:layout_height="64dp"
                                        android:padding="15dp"

                                        android:src="@drawable/ic_credit_symbol">

                                    </ImageView>

                            <TextView
                                android:id="@+id/lblCredit"
                                android:layout_width="100dp"
                                android:layout_height="64dp"
                                android:autoSizeMaxTextSize="100sp"
                                android:autoSizeMinTextSize="12sp"
                                android:padding="5dp"
                                android:text="0"
                                app:autoSizeTextType="uniform" />
                        </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp" />


                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="160dp"
                        android:layout_height="140dp"
                        android:layout_margin="10dp"
                        android:id="@+id/addGalleryImage"
                        app:cardElevation="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Family Coordinator"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:textAlignment="center"
                                android:padding="5dp"
                                android:gravity="center_horizontal" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:gravity="center">
                                    <ImageView
                                        android:layout_width="64dp"
                                        android:layout_height="64dp"
                                        android:padding="15dp"
                                        android:src="@drawable/ic_credit_symbol">

                                    </ImageView>

                                    <TextView
                                        android:id="@+id/lblCoordinator"
                                        android:layout_width="100dp"

                                        android:layout_height="64dp"
                                        android:autoSizeMaxTextSize="100sp"
                                        android:autoSizeMinTextSize="12sp"
                                        android:padding="5dp"
                                        android:text="0"
                                        app:autoSizeTextType="uniform" />
                                </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp" />


                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_margin="5dp">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="160dp"
                        android:layout_height="140dp"
                        android:layout_margin="10dp"
                        android:id="@+id/addEbook"
                        app:cardElevation="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Samudaay Members"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:textAlignment="center"
                                android:padding="5dp"
                                android:gravity="center_horizontal" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:padding="15dp"
                                    android:src="@drawable/ic_credit_symbol">

                                </ImageView>

                                <TextView
                                    android:id="@+id/lblSamudaay"
                                    android:layout_width="100dp"

                                    android:layout_height="64dp"
                                    android:autoSizeMaxTextSize="100sp"
                                    android:autoSizeMinTextSize="12sp"
                                    android:padding="5dp"
                                    android:text="0"
                                    app:autoSizeTextType="uniform" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="160dp"
                        android:layout_height="140dp"
                        android:layout_margin="10dp"
                        android:id="@+id/faculty"
                        app:cardElevation="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Invited JanMitr"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:textAlignment="center"
                                android:padding="5dp"
                                android:gravity="center_horizontal" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:padding="15dp"
                                    android:src="@drawable/ic_credit_symbol">

                                </ImageView>

                                <TextView
                                    android:id="@+id/lblInvited"
                                    android:layout_width="100dp"
                                    android:layout_height="64dp"
                                    android:autoSizeMaxTextSize="100sp"
                                    android:autoSizeMinTextSize="12sp"
                                    android:padding="5dp"
                                    android:text="0"
                                    app:autoSizeTextType="uniform" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_margin="5dp">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="250dp"
                        android:layout_height="140dp"
                        android:layout_margin="5dp"
                        android:id="@+id/deleteNotice"
                        app:cardElevation="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Services"
                                    android:textStyle="bold"
                                    android:layout_marginTop="10dp"
                                    android:textAlignment="center"
                                    android:padding="5dp"
                                    android:gravity="center_horizontal"></TextView>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:gravity="center">
                                    <ImageView
                                        android:layout_width="64dp"
                                        android:layout_height="64dp"
                                        android:padding="15dp"
                                        android:src="@drawable/ic_credit_symbol">

                                    </ImageView>

                                    <TextView
                                        android:id="@+id/lblService"
                                        android:layout_width="100dp"

                                        android:layout_height="64dp"
                                        android:autoSizeMaxTextSize="100sp"
                                        android:autoSizeMinTextSize="12sp"
                                        android:padding="5dp"

                                        android:text="0"
                                        app:autoSizeTextType="uniform"></TextView>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>
            </LinearLayout>

    </LinearLayout >
    <include layout="@layout/includesidebarmenu"/>


</androidx.drawerlayout.widget.DrawerLayout >